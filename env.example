# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:safesight-alerts
S3_BUCKET_NAME=safesight-video-storage

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Database
DYNAMODB_TABLE_NAME=safesight-incidents

# Video Processing
VIDEO_FRAME_RATE=30
DETECTION_INTERVAL=5
MAX_VIDEO_SIZE_MB=100

# Alert Configuration
ALERT_COOLDOWN_MINUTES=5
EMERGENCY_CONTACTS=police@example.com,hospital@example.com
